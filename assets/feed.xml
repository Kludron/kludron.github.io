---
layout: compress
permalink: /feed.xml
---

{% capture source %}
<?xml version="1.0" encoding="UTF-8" ?>
<rss version="2.0">
<channel>
  <id>{{ "/" | absolute_url }}</id>
  <title>{{ site.title }}</title>
  <description>{{ site.description }}</description>
  <author>
    <name>{{ site.social.name }}</name>
    <uri>{{ "/" | absolute_url }}</uri>
  </author>
  <link>{{ site.baseurl | absolute_url }}</link>
  <rights> Â© {{ 'now' | date: '%Y' }} {{ site.social.name }} </rights>
  <image>
    <url>{{ site.baseurl | absolute_url }}assets/img/favicons/favicon-32x32.png</url>
    <title>{{ site.title }}</title>
    <link>{{ site.baseurl | absolute_url }}</link>
  </image>

{% for post in site.posts limit: 10 %}
  {% assign post_absolute_url = post.url | absolute_url %}
  <item>
    <title>{{ post.title }}</title>
    <link href="{{ post_absolute_url }}" rel="alternate" type="text/html" title="{{ post.title }}" />
    <published>{{ post.date | date_to_xmlschema }}</published>
  {% if post.last_modified_at %}
    <updated>{{ post.last_modified_at | date_to_xmlschema }}</updated>
  {% else %}
    <updated>{{ post.date | date_to_xmlschema }}</updated>
  {% endif %}
    <id>{{ post_absolute_url }}</id>
    <content src="{{ post_absolute_url }}" />
    <author>
      <name>{{ post.author | default: site.social.name }}</name>
    </author>

  {% if post.categories %}
    {% for category in post.categories %}
    <category term="{{ category }}" />
    {% endfor %}
  {% endif %}

  {% if post.summary %}
    <description>
      <![CDATA[
      {% if post.icon %}
        <img src="{{ post.icon.path | absolute_url }}" alt="{{ post.icon.alt }}" height="{{ post.icon.heigh }}" width="post.icon.width" href="{{ post_absolute_url }}" />
      {% else %}
        <img src="{{ '/assets/img/logos/Blue\+Grey\+White\ on\ Dark.png }}" alt="{{ site.title }}" width="500" href="{{ post_absolute_url }}" />
      {% endif %}
        {{ post.summary | strip }}
      ]]>
    </description>
  {% else %}
    <description>
      <![CDATA[
      {% if post.icon %}
        <img src="{{ post.icon.path | absolute_url }}" alt="{{ post.icon.alt }}" height="{{ post.icon.heigh }}" width="post.icon.width" href="{{ post_absolute_url }}" />
      {% else %}
        <img src="{{ '/assets/img/logos/Blue\+Grey\+White\ on\ Dark.png }}" alt="{{ site.title }}" width="500" href="{{ post_absolute_url }}" />
      {% endif %}
        {% include no-linenos.html content=post.content %}
        {{ content  | strip_html | truncate: 200 }}
      ]]>
    </description>
  {% endif %}
  </item>
{% endfor %}
</channel>
</rss>
{% endcapture %}
{{ source | replace: '&', '&amp;' }}
